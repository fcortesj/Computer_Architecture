/**
 * 16-bit incrementer:  
 * out = in + 1 (arithmetic addition)
 */

CHIP Inc16 {
    IN in[16];
    OUT out[16];

    PARTS:
    //Implement a Half Adder with each bit adding one to each bit
   Add16(a=in, b[0]=true, out=out);
   
}